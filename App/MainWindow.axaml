<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="App.MainWindow"
        Title="App">
    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Stretch">
            <Button Name="MatrixGeneratorButton"
                    Click="MatrixGeneratorButton_OnClick"
                    HorizontalAlignment="Stretch">
                Генерация обычной матрицы
            </Button>
            <Button Name="SparseMatrixGeneratorButton"
                    Click="SparseMatrixGeneratorButton_OnClick"
                    HorizontalAlignment="Stretch">
                Генерация разреженной матрицы
            </Button>
        </StackPanel>
        <Canvas Name="Canvas"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Yellow"
                UseLayoutRounding="False"/>
    </StackPanel>
</Window>
